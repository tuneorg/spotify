{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"lib": ["ES2021", "ESNext.Array"],
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types",
			"src/typings/*"
		]
	},
	"exclude": [],
	"include": ["src/**/*.ts", "src/**/*.json"]
}
